<%- include("../partials/galleryIndexHeader") %>


<!-- show all galleries -->
<main>
	<div class="container-lg mb-5">
		
		<% if(galleries.length !== 0){ %>
			<h5 class="text-center mt-5 pt-5">Galleries:</h5>
		<% }else{ %>
			<h5 class="text-center mt-5 pt-5">No Galleries found</h5>
		<% } %>
		
		<div class="row mt-3">
			
				<!-- show pagination container only if there is more than 7 items or the user is not on the first page -->
				<% var numOfGalleries = 0; %>
			
				<!-- show all galleries -->
				<% galleries.forEach(function(gallery){ %>
			
					<% numOfGalleries = numOfGalleries + 1; %>
					
					<div class="col-md-6 col-lg-4">		

						<div class="card p-0 my-4 border border-light">

							<!-- show first img from the gallery -->
							<img class="card-img-top" src="<%= gallery.imgs[0].img %>" style="object-fit: cover; width: 100%; height: 200px;">
							
							<!-- title, author, num of imgs, total likes of all pics in the gallery -->
							<div class="card-body p-0 px-4 bg-light">
								
								<!-- title -->
								<h5 class="card-title text-center"> <%= gallery.title %> </h5>
								
								<!-- author, num of imgs, total likes -->
								<p class="card-text">
									
									<div class="d-flex justify-content-between">
									
										<!-- author -->
										<span> <strong> <%= gallery.author.username %> </strong> </span>


										<!-- num of imgs -->
										<span> <i class="fas fa-images"></i> <%= gallery.imgs.length %> </span>


										<!-- calculate all the likes inside the gallery -->
										<% let numOfLikes = 0; %>
										<% gallery.imgs.forEach(function(img, i){ %>
											<% numOfLikes = numOfLikes + img.likes.length; %>
										<% }); %>
										<span class="float-right">
											<i class="fas fa-thumbs-up"></i> 
											<%= numOfLikes %> 
										</span>
									</div>
								</p>
							</div>
							<a class="stetched-link stretched-link" href="/gallery/<%= gallery._id %>"></a>	
						</div>
					</div>
				<% }); %>	
		</div>
	</div>
</main>


<!-- Pagination -->
<footer>
	<div class="container mb-5">
		<nav aria-label="Page navigation ">
			
			<!-- show pagination container only if there is more than 7 items or the user is not on the first page -->
			<% if (pages && pages > 0 && numOfGalleries > 11 || pages && pages > 0 && current > 1) { %>

				<ul class="pagination justify-content-center">
					<% if (current == 1) { %>
						<li class="page-item disabled"><a class="page-link">First</a></li>
					<% } else { %>
						<li><a class="page-link" href="/gallery">First</a></li>
					<% } %>

					<% if (current == 1) { %>
						<li class="page-item disabled"><a class="page-link">«</a></li>
					<% } else { %>
						<li><a class="page-link" href="/gallery?page=<%= Number(current) - 1 %>">«</a></li>
					<% } %>

					<% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
					<% if (i !== 1) { %>
						<li class="page-item disabled"><a class="page-link">...</a></li>
					<% } %>
					<% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
						<% if (i == current) { %>
							<li class="active"><a class="page-link"><%= i %></a></li>
						<% } else { %>
							<li><a class="page-link" href="/gallery?page=<%= i %>"><%= i %></a></li>
						<% } %>
						<% if (i == Number(current) + 4 && i < pages) { %>
							<li class="page-item disabled"><a class="page-link">...</a></li>
						<% } %>
					<% } %>

					<% if (current == pages) { %>
						<li class="page-item disabled"><a class="page-link">»</a></li>
					<% } else { %>
						<li><a class="page-link" href="/gallery?page=<%= Number(current) + 1 %>">»</a></li>
					<% } %>

					<% if (current == pages) { %>
						<li class="page-item disabled"><a class="page-link">Last</a></li>
					<% } else { %>
						<li><a class="page-link" href="/gallery?page=<%= pages %>">Last</a></li>
					<% } %>
				</ul>
			<% } %>
		</nav>
	</div>
</footer>



    <!-- Bootstap JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

	<script>

		// add bg collor when navbar is expanded	
		$(".navbar > button").on("click", function(){	
			if($(".navbar").height() > 100){
				$(".navbar").removeClass("scrolled");
			}else{
				$(".navbar").addClass("scrolled");
			}
		});

		// remove bg color when screen size is so wide that navbar is no longer extended, add back when it is
		$(window).resize(function(){
			if( $(window).width() > 989 ){
				$(".navbar").removeClass("scrolled");
			}
			if( $(window).width() < 989 && $(".navbar").height() > 200 ){
				$(".navbar").addClass("scrolled");
			}
		});
		
		// set bg to navbar when page is scrolled
		$(document).scroll(function () {
			$(".navbar").toggleClass('scrolled', $(this).scrollTop() > $(".jumbotron").height());
		});

	</script>

  </body>
</html>