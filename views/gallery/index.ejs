<%- include("../partials/galleryIndexHeader") %>


<!-- show all galleries -->
<main>
	<div class="container-lg">
		
		<% if(galleries.length !== 0){ %>
						<h5 class="text-center pt-5 pt-sm-0 mt-sm-0 pt-lg-5 mt-lg-5">Journals:</h5>
					<% }else{ %>
						 <h5 class="text-center pt-5 pt-sm-0 mt-sm-0 pt-lg-5 mt-lg-5">No Journals found</h5>
					<% } %>
		
		
		
		<div class="row mt-3">
			
				<!-- show pagination container only if there is more than 7 items or the user is not on the first page -->
				<% var numOfGalleries = 0; %>
				
				<% galleries.forEach(function(gallery){ %>
			
					<% numOfGalleries = numOfGalleries + 1; %>
					
					<div class="col-md-6 col-lg-4">		

						<div class="card p-0 my-4">

							<!-- show first img from the gallery -->
							<img class="card-img-top" src="<%= gallery.imgs[0].img %>" style="object-fit: cover; width: 100%; height: 200px">
							
							<!-- title, author, total likes of all pics in the gallery -->
							<div class="card-body py-2">
								
								<!-- title -->
								<h5 class="card-title text-center"> <%= gallery.title %> </h5>
								
								<!-- author and total likes -->
								<p class="card-text">
									
									<!-- author -->
									<span> Posted by <em> <%= gallery.author.username %> </em> </span>
									
									<!-- calculate all the likes inside the gallery -->
									<% let numOfLikes = 0; %>
									<% gallery.imgs.forEach(function(img, i){ %>
										<% numOfLikes = numOfLikes + img.likes.length; %>
									<% }); %>
									<span class="float-right">
										<i class="fas fa-thumbs-up"></i> 
										<%= numOfLikes %> 
									</span> 
								</p>
							</div>
							<a class="stetched-link stretched-link" href="/gallery/<%= gallery._id %>"></a>	
						</div>
					</div>
				<% }); %>	
		</div>
	</div>
</main>


<!-- Pagination -->
<footer>
	<div class="container">
		<nav aria-label="Page navigation ">
			
			<!-- show pagination container only if there is more than 7 items or the user is not on the first page -->
			<% if (pages && pages > 0 && numOfGalleries > 11 || pages && pages > 0 && current > 1) { %>

				<ul class="pagination justify-content-center">
					<% if (current == 1) { %>
						<li class="page-item disabled"><a class="page-link">First</a></li>
					<% } else { %>
						<li><a class="page-link" href="/gallery">First</a></li>
					<% } %>

					<% if (current == 1) { %>
						<li class="page-item disabled"><a class="page-link">«</a></li>
					<% } else { %>
						<li><a class="page-link" href="/gallery?page=<%= Number(current) - 1 %>">«</a></li>
					<% } %>

					<% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
					<% if (i !== 1) { %>
						<li class="page-item disabled"><a class="page-link">...</a></li>
					<% } %>
					<% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
						<% if (i == current) { %>
							<li class="active"><a class="page-link"><%= i %></a></li>
						<% } else { %>
							<li><a class="page-link" href="/gallery?page=<%= i %>"><%= i %></a></li>
						<% } %>
						<% if (i == Number(current) + 4 && i < pages) { %>
							<li class="page-item disabled"><a class="page-link">...</a></li>
						<% } %>
					<% } %>

					<% if (current == pages) { %>
						<li class="page-item disabled"><a class="page-link">»</a></li>
					<% } else { %>
						<li><a class="page-link" href="/gallery?page=<%= Number(current) + 1 %>">»</a></li>
					<% } %>

					<% if (current == pages) { %>
						<li class="page-item disabled"><a class="page-link">Last</a></li>
					<% } else { %>
						<li><a class="page-link" href="/gallery?page=<%= pages %>">Last</a></li>
					<% } %>
				</ul>
			<% } %>
		</nav>
	</div>
</footer>


<%- include("../partials/footer") %>