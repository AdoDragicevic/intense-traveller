<%- include("../partials/header") %>


<!-- Jumbotron -->
<header>
	<div class="container text-center">
		<div class="jumbotron" style="background-color: white">
  			<h1 class="display-3"> <em>Intense Traveller</em></h1>
			<p class="lead"> <em> Create Travel Journals, add Picture Galleries, Follow your favorite travellers, and more . . .  </em> </p>
  			<hr class="my-4">
			<a class="btn btn-lg btn-primary" href="/gallery/new" role="button">Create New Gallery</a>
  			
		</div>
	</div>
</header>


<!-- shwo all galleries -->
<main>
	<div class="container">
		<div class="row">
			
				
				<% galleries.forEach(function(gallery){ %>
					
					<div class="col-md-6 col-lg-4">		

						<div class="card p-0 my-4">

							<!-- show first img from the gallery -->
							<img class="card-img-top" src="<%= gallery.imgs[0].img %>" style="object-fit: cover; width: 100%; height: 250px">
							
							<!-- title, author, total likes of all pics in the gallery -->
							<div class="card-body py-2">
								
								<!-- title -->
								<h5 class="card-title text-center"> <%= gallery.title %> </h5>
								
								<!-- author and total likes -->
								<p class="card-text">
									
									<!-- author -->
									<span> Posted by <em> <%= gallery.author.username %> </em> </span>
									
									<!-- calculate all the likes inside the gallery -->
									<% let numOfLikes = 0; %>
									<% gallery.imgs.forEach(function(img, i){ %>
										<% numOfLikes = numOfLikes + img.likes.length; %>
									<% }); %>
									<span class="float-right">
										<i class="fas fa-thumbs-up"></i> 
										<%= numOfLikes %> 
									</span> 
								</p>
							</div>
							<a class="stetched-link stretched-link" href="/gallery/<%= gallery._id %>"></a>	
						</div>
					</div>
				<% }); %>	
		</div>
	</div>
</main>


<%- include("../partials/footer") %>