<%- include("../partials/header") %>

<h1> Edit <%= blog.title %> </h1>

<form action="/blog/<%= blog._id %>?_method=PUT" method="POST">
	<input type="text" name="blog[title]" value="<%= blog.title %>">
	<input type="text" name="blog[img]" value="<%= blog.img %>">
	<input type="text" name="blog[content]" value="<%= blog.content %>">
	<button>Submit</button>
</form>

<a href="/blog">Back</a>



