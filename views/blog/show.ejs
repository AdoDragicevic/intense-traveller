<%- include("../partials/header") %>

<!--  blog title -->
<header>
	<div class="container">
		<div class="row mt-5">
			<div class="col-lg-3"></div>
			<div class="col-lg-9">
				<h1> <%= blog.title %> </h1>
			</div>
		</div>
	</div>
</header>


<!-- main content -->
<main>
	<section>
		<div class="container">
			<div class="row">
				
				<!--author info -->
				<div class="col-lg-3">
					
					<div class="mt-2">
					
						<!-- Small img -->
						<img src="#">
						
						<!-- authors name -->
						<h2> <a href="/profile/<%= blog.author.id %>"> <%= blog.author.username %> </a> </h2>
						
						<!-- follow button -->
						
						<!-- gallery related to this blog -->
					
					</div>

					<p> <em> <%= blog.author.description %> </em> </p>
					<h5> <a href="#">See the Gallery related to this Journal!</a> </h5>
				</div>
				
				
				<!-- blog picture, date, text, and buttons  -->
				<div class="col-lg-9">
					<div class="card">
						<img class="card-img-top img-fluid p-1" src=" <%= blog.img %> ">
					</div>
					
					<div class="card">
						
						<!-- Time posted and like button -->
						<ul class="list-group list-group-flush">
							<li class="list-group-item">
								<div class="d-flex justify-content-between">
									<span> <em> Posted on <%= blog.created.toDateString() %> </em> </span>
									
									<!-- Edit & Delete Buttons -->
									<div>
										<% if(currentUser && blog.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
											<a class="btn btn-sm btn-warning" href="/blog/<%= blog._id %>/edit">Edit</a>
											<form class="d-inline" action="/blog/<%= blog._id %>?_method=DELETE" method="POST">
												<button class="btn btn-sm btn-danger">Delete</button>
											</form>
										<% } %>
									</div>
									
									
									<!-- Like button -->
									<form class="d-inline" action="/blog/<%= blog._id %>/like" method="POST">
										<div>
											<% if (currentUser && blog.likes.some(function (like) {
												return like.equals(currentUser._id)
											})) { %>
												<button class="btn btn-sm btn-info">
													<i class="fas fa-thumbs-up"></i> Liked (<%= blog.likes.length %>)
												</button>
											<% } else { %>
												<button class="btn btn-sm btn-primary">
													<i class="fas fa-thumbs-up"></i> Like (<%= blog.likes.length %>)
												</button>
											<% } %>
											<button type="button" class="btn btn-sm btn-default" data-toggle="modal" data-target="#blogLikes">Liked by</button>
										</div>
									</form>
								</div>
							</li>	
						</ul>
						
						
						<!-- blog text -->
						<p class="card-text m-4 mt-5"><%= blog.content %></p>
					</div>
				</div>
			</div>
		</div>
	</section>
	
	<!-- Comments -->
	<section>
		<div class="container">
			<div class="row">
				<div class="col-lg-3"></div>
			<div class="col-lg-9">
				<div class="card-footer my-5">
					<!-- Collapse button -->
					<div class="float-right">
						<a class="btn btn-success" role="button" data-toggle="collapse" href="#collapseComment" aria-expanded="false" aria-controls="collapseComment">Write a Comment</a>
					</div>

					<hr class="mt-5">

					<!-- comment form-->
					<div class="collapse" id="collapseComment">

						<% if(!currentUser) { %>

							<!--If the user is not logged in, direct him to the login page -->
							<h5>You need to login to post a comment. <a href="/login">Click here</a> to go to the login page.</h5>
						<% } %>

						<% if(currentUser) { %>

							<!--If the user is logged in, show the new comment form-->
							<form id="add-comment-form" action="/blog/<%= blog._id %>/comment" method="POST">

								<textarea class="form-control" name="comment[text]" placeholder="comment..." form="add-comment-form" rows="2" cols="70"></textarea>
								<button class="btn btn-sm btn-success my-2">Comment</button>
							</form>
						<% } %>
					</div>


					<!-- display comments -->
					<div class="mt-3">

						<% blog.comments.forEach(function(comment){ %>

							<div>
								<span> <strong> <%= comment.author.username %> </strong> </span>
								<p class="px-1"><%= comment.text %></p>

								<!-- if User owns the comment, show edit and delete buttons -->
								<% if(currentUser && comment.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>

									<!--E+edit comment form-->
									<div class="collapse" id="collapseEdit<%= comment._id %>">
										<form id="edit-comment-form<%= comment._id %>" action="/blog/<%= blog._id %>/comment/<%= comment._id %>?_method=PUT" method="POST">
											<textarea class="form-control" name="comment[text]" placeholder="Your comment text..." form="edit-comment-form<%= comment._id %>" rows="2" cols="70"><%= comment.text %></textarea>
											<button class="btn btn-sm btn-success mt-1">Save changes</button>
										</form>
									</div>

									<!--edit and delete button-->
									<a role="button" data-toggle="collapse" href="#collapseEdit<%= comment._id %>" aria-expanded="false" aria-controls="collapse<%= comment._id %>">Edit</a>
									<form class="d-inline" action="/blog/<%= blog._id %>/comment/<%= comment._id %>?_method=DELETE" method="POST">
										<button class="btn btn-link  mb-1">Delete</button>
									</form>	
								<% } %>
								<hr>
							</div>
						<% }); %>
					</div>
				</div>
			</div>	
			</div>
		</div>
	</section>	
</main>


<!-- Likes Modal to show who liked the post -->
	<div id="blogLikes" class="modal fade" role="dialog">
    	<div class="modal-dialog">
        	<!-- Modal content-->
        	<div class="modal-content">
            	<div class="modal-header">
					<h4 class="modal-title">Likes: <%= blog.likes.length %></h4>
            	</div>
            	<div class="modal-body">
                	<table class="table table-striped">
                    	<thead>
                    		<tr>
                        		<th>Liked by:</th>
                    		</tr>
                    	</thead>
                    	<tbody>
                    		<% blog.likes.forEach(function(like) { %>
                        		<tr>
                            		<td><span class="badge"><i class="fas fa-user"></i></span> <%= like.username %></td>
                        		</tr>
                    		<% }); %>
                    		<% if (blog.likes.length === 0) { %>
                        		<tr>
                            		<td><em>No likes yet.</em></td>
                        		</tr>
                    		<% } %>
                    	</tbody>
                	</table>
            	</div>
            	<div class="modal-footer">
                	<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            	</div>
        	</div>
    	</div>
	</div>
	

<%- include("../partials/footer") %>