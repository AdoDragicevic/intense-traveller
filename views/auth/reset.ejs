<%- include("../partials/header") %>
	

<div class="container">
	<div class="row">
		<div class="col-lg-4 col-xs-8 mx-auto mt-5">
			<form action="/reset/<%= token %>" method="POST">
				<h1 class="h3 mb-3 font-weight-normal text-center">Set New Password</h1>
				<div class="form-group">
					<input class="form-control" type="password" name="password" placeholder="New Password">
				</div>
				<div class="form-group">
					<input class="form-control" type="password" name="confirm" placeholder="Confirm Password">
				</div>
				<button class="btn btn-lg btn-primary btn-block" type="submit">Update Password</button>
			</form>
		</div>
	</div>
</div>




<%- include("../partials/footer") %>